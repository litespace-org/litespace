{
  "name": "@litespace/radio",
  "version": "1.0.0",
  "scripts": {
    "build": "pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "rm -rf dist/",
    "check": "tsc --noEmit",
    "prepare": "ts-patch install -s",
    "watch": "npm-watch build"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx",
      "quiet": false
    }
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./whatsapp": {
      "import": "./dist/esm/whatsapp/index.js",
      "require": "./dist/cjs/whatsapp/index.js"
    },
    "./telegram/bot": {
      "import": "./dist/esm/telegram/bot.js",
      "require": "./dist/cjs/telegram/bot.js"
    },
    "./telegram/client": {
      "import": "./dist/esm/telegram/client.js",
      "require": "./dist/cjs/telegram/client.js"
    }
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "baileys": "^6.7.13",
    "telegram": "^2.26.22",
    "prompts": "^2.4.2"
  },
  "peerDependencies": {
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "npm-watch": "^0.13.0",
    "qrcode-terminal": "^0.12.0",
    "ts-patch": "^3.2.1",
    "typescript": "^5.4.5",
    "@types/prompts": "^2.4.9"
  }
}
