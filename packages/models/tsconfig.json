{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "module": "nodenext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "@fixtures/*": ["fixtures/*"]
    }
  },
  "include": ["src/", "tests/"]
}
