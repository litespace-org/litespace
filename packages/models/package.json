{
  "name": "@litespace/models",
  "description": "LiteSpace models",
  "version": "1.0.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "check": "tsc -p tsconfig.json --noEmit --emitDeclarationOnly false",
    "watch": "pnpm build -w",
    "migrate": "env-cmd -f .env node-pg-migrate",
    "migrate:test:local": "env-cmd -f .env.test node-pg-migrate",
    "migrate:test:ci": "env-cmd -f .env.test.ci node-pg-migrate",
    "seed": "env-cmd -f .env vite-node scripts/seed.ts",
    "reseed": "pnpm migrate down && pnpm migrate up && pnpm seed",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:local": "env-cmd -f .env.test pnpm run test",
    "test:ci": "env-cmd -f .env.test.ci pnpm run test",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0"
  },
  "devDependencies": {
    "@litespace/models": "workspace:^",
    "@litespace/sol": "workspace:^",
    "@faker-js/faker": "^9.0.3",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chai": "^4.3.16",
    "@types/jest": "^29.5.12",
    "@eslint/compat": "^1.2.2",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.14.0",
    "babel-jest": "^29.7.0",
    "chai": "^5.1.1",
    "colors": "^1.4.0",
    "env-cmd": "^10.1.0",
    "esbuild-runner": "^2.2.2",
    "jest": "^29.7.0",
    "knex": "^3.1.0",
    "node-pg-migrate": "^7.3.2",
    "pg": "^8.11.5",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.1",
    "vite-node": "^2.1.2",
    "aripsum": "^0.2.0",
    "lodash": "^4.17.21",
    "zod": "^3.23.8",
    "redis": "^4.7.0"
  },
  "dependencies": {
    "@litespace/types": "workspace:^",
    "dayjs": "^1.11.13"
  },
  "peerDependencies": {
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.11.5",
    "zod": "^3.23.8",
    "redis": "^4.7.0"
  }
}
