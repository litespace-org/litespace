{
  "name": "@litespace/auth",
  "description": "LiteSpace Auth API",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist/",
    "rebuild": "pnpm clean && pnpm build",
    "test": "jest",
    "watch": "npm-watch build",
    "prepare": "ts-patch install -s"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx",
      "quiet": false
    }
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-typescript": "^7.24.7",
    "@jest/globals": "^29.7.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/chai": "^4.3.16",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "chai": "^5.1.1",
    "env-cmd": "^10.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.3",
    "ts-patch": "^3.2.1",
    "typescript": "^5.4.5",
    "typescript-transform-paths": "^3.5.2",
    "npm-watch": "^0.13.0"
  },
  "dependencies": {
    "@litespace/types": "workspace:^",
    "google-auth-library": "^9.14.2",
    "jsonwebtoken": "^9.0.2"
  },
  "peerDependencies": {
    "@litespace/models": "workspace:^",
    "@litespace/sol": "workspace:^",
    "connect-pg-simple": "^9.0.1",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "zod": "^3.23.8"
  }
}
