{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react",
    "module": "NodeNext",
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  }
}
