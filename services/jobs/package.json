{
  "name": "@litespace/jobs",
  "description": "LiteSpace automated jobs & cron jobs",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "env-cmd node dist/index.js",
    "prepare": "ts-patch install -s",
    "psql": "env-cmd node dist/scripts/psql.js",
    "cli": "env-cmd node dist/scripts/cli.js",
    "test": "env-cmd -f .env.test jest --runInBand --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.806.0",
    "@aws-sdk/s3-request-presigner": "^3.806.0",
    "@litespace/kafka": "workspace:^",
    "@litespace/models": "workspace:^",
    "@litespace/radio": "workspace:^",
    "@litespace/types": "workspace:^",
    "@litespace/utils": "workspace:^",
    "commander": "^13.1.0",
    "dayjs": "^1.11.13",
    "ms": "^2.1.3",
    "node-schedule": "^2.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.7.0",
    "chai": "^5.2.0",
    "jest": "^30.0.2",
    "ts-jest": "^29.4.0",
    "ts-patch": "^3.2.1",
    "typescript": "^5.4.5",
    "typescript-transform-paths": "^3.5.2"
  }
}
