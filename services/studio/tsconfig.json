{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "lib": ["es2015"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["composition", "main", "lib"],
  "exclude": ["remotion.config.ts"]
}
