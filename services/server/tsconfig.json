{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@fixtures/*": ["fixtures/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/", "tests/", "fixtures/"],
  "exclude": ["node_module"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
