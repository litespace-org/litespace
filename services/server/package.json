{
  "name": "@litespace/server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "pnpm build && env-cmd ts-node dist/index.js",
    "start:test:server": "pnpm build && ts-node dist/index.js",
    "start:local:test:server": "env-cmd -f .env.test pnpm start:test:server",
    "start:ci:test:server": "env-cmd -f .env.test.ci pnpm start:test:server",
    "start:ci:test:server:bg": "pm2 start 'pnpm start:ci:test:server' --name test-server",
    "dev": "env-cmd nodemon src/index.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:local": "env-cmd -f .env.test pnpm run test",
    "test:ci": "env-cmd -f .env.test.ci pnpm run test",
    "pm2:start": "pm2 start ecosystem.config.js",
    "peer": "peerjs --port 7070 --key peer --path /ls",
    "docker": "docker compose up -d",
    "docker:linux": "sudo docker compose up -d",
    "check": "tsc --noEmit",
    "wait": "wait-on tcp:8080"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-typescript": "^7.24.7",
    "@jest/globals": "^29.7.0",
    "@litespace/atlas": "workspace:^",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/chai": "^4.3.16",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.11.6",
    "@types/pg-format": "^1.0.5",
    "@types/pidusage": "^2.0.5",
    "babel-jest": "^29.7.0",
    "chai": "^5.1.1",
    "env-cmd": "^10.1.0",
    "jest": "^29.7.0",
    "node-pg-migrate": "^7.3.2",
    "nodemon": "^3.1.0",
    "pm2": "^5.4.3",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@litespace/auth": "workspace:^",
    "@litespace/emails": "workspace:^",
    "@litespace/models": "workspace:^",
    "@litespace/sol": "workspace:^",
    "@litespace/types": "workspace:^",
    "axios": "^1.6.8",
    "body-parser": "^1.20.2",
    "colors": "^1.4.0",
    "connect-pg-simple": "^9.0.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.5.1",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "peer": "^1.0.2",
    "pg": "^8.11.5",
    "pg-format": "^1.0.4",
    "pidusage": "^3.0.2",
    "redis": "^4.7.0",
    "socket.io": "^4.7.5",
    "url-pattern": "^1.0.3",
    "xss": "^1.0.15",
    "zod": "^3.23.8"
  }
