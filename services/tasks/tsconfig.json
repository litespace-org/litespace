{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@fixtures/*": ["fixtures/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["src/", "tests/"],
  "exclude": ["node_module"]
}
