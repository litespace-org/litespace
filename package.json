{
  "name": "litespace",
  "version": "1.0.0",
  "description": "LiteSpace Monorepo",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:pkg:atlas": "pnpm --filter @litespace/atlas build",
    "build:pkg:auth": "pnpm --filter @litespace/auth build",
    "build:pkg:emails": "pnpm --filter @litespace/emails build",
    "build:pkg:luna": "pnpm --filter @litespace/luna build",
    "build:pkg:models": "pnpm --filter @litespace/models build",
    "build:pkg:sol": "pnpm --filter @litespace/sol build",
    "build:pkg:types": "pnpm --filter @litespace/types build",
    "build:pkg:headless": "pnpm --filter @litespace/headless build",
    "build:pkgs": "pnpm build:pkg:types && pnpm build:pkg:sol && pnpm build:pkg:emails && pnpm build:pkg:atlas && pnpm build:pkg:headless && pnpm build:pkg:auth &&  pnpm build:pkg:luna && pnpm build:pkg:models",
    "watch:atlas": "pnpm build:pkg:atlas -w",
    "watch:auth": "pnpm build:pkg:auth -w",
    "watch:emails": "pnpm build:pkg:emails -w",
    "watch:luna": "pnpm --filter @litespace/luna watch:build",
    "watch:models": "pnpm build:pkg:models -w",
    "watch:sol": "pnpm build:pkg:sol -w",
    "watch:types": "pnpm build:pkg:types -w",
    "watch:headless": "pnpm --filter @litespace/headless watch:build",
    "watch:pkgs": "concurrently --names \"types,sol,atlas,headless,auth,email,luna,models\" \"pnpm watch:types\" \"pnpm watch:sol\"  \"pnpm watch:atlas\" \"pnpm watch:headless\" \"pnpm watch:auth\" \"pnpm watch:emails\" \"pnpm watch:luna\" \"pnpm watch:models\"",
    "dev:nova": "pnpm --filter @litespace/nova dev",
    "dev:dash": "pnpm --filter @litespace/dashboard dev",
    "build:nova:vercel": "pnpm --filter @litespace/nova build:vercel",
    "build:luna:vercel": "pnpm --filter @litespace/luna build:vercel",
    "build:nebula:vercel": "pnpm --filter @litespace/nebula build:vercel",
    "deploy:orbit:vercel": "pnpm --filter @litespace/orbit deploy:vercel",
    "deploy:nova:vercel": "pnpm --filter @litespace/nova deploy:vercel",
    "deploy:luna:vercel": "pnpm --filter @litespace/luna deploy:vercel",
    "deploy:nebula:vercel": "pnpm --filter @litespace/nebula deploy:vercel",
    "vercel": "env-cmd vite-node scripts/vercel.ts",
    "vercel:ci": "vite-node scripts/vercel.ts",
    "telegram": "vite-node scripts/telegram.ts",
    "cleandep": "rm -rf node_modules && pnpm -r exec rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "axios": "^1.7.7",
    "concurrently": "^8.2.2",
    "env-cmd": "^10.1.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "vercel": "^34.2.7",
    "vite-node": "^2.1.2"
  },
  "dependencies": {
    "commander": "^12.1.0"
  }
}
